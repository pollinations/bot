{
  "extends": "@tsconfig/node16-strictest-esm/tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "checkJs": false,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noUnusedLocals": false
  },
  "ts-node": {
    "esm": true,
    "files": true,
    "transpileOnly": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
